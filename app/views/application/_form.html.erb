<%= form_with model: @tweet, data: { turbo: false } do |form| %>
  <div>
    <%= form.label :message %><br>
    <%= form.text_area :message, rows: 3 %>
  </div>

  <div>
    <%= form.submit "ツイートを作成" %>
  </div>
<% end %>

<% if @tweet.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@tweet.errors.count, "エラー") %>が発生しました:</h2>
    <ul>
      <% @tweet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
